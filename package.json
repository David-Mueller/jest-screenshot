{
  "name": "jest-screenshot",
  "version": "0.0.0",
  "description": "A jest extension to deal with screenshots and all sorts of images.",
  "main": "dist/index.js",
  "author": "Frederick Gnodtke",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig-production.json --sourceMap",
    "test": "jest",
    "lint": "tslint --format stylish --type-check --project tsconfig.json",
    "clean": "rm -rf dist",
    "docs": "typedoc --mode file --out docs/ --exclude '**/test-*.ts' src/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Prior99/jest-screenshot"
  },
  "files": [
    "index.d.ts",
    "./dist",
    "./docs",
    "./example",
    "./src",
    "./LICENSE",
    "./README.md"
  ],
  "jest": {
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "lines": 100,
        "functions": 100,
        "branches": 100
      }
    },
    "collectCoverage": true,
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts)$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/*.(ts|js)"
    ],
    "testPathIgnorePatterns": [
      "/example/"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "mapCoverage": true
  },
  "devDependencies": {
    "@types/jest": "^21.1.7",
    "@types/lodash.kebabcase": "^4.1.3",
    "@types/node": "^9.6.2",
    "bind-decorator": "^1.0.11",
    "coveralls": "^3.0.0",
    "jest": "^21.2.1",
    "ts-jest": "^21.2.3",
    "tslint": "^5.8.0",
    "typedoc": "^0.11.1",
    "typescript": "^2.6.1"
  },
  "dependencies": {
    "@types/mkdirp": "^0.5.2",
    "chalk": "^2.3.2",
    "lodash.kebabcase": "^4.1.1",
    "mkdirp": "^0.5.1",
    "native-image-diff": "^0.1.0",
    "node-libpng": "^0.2.0"
  }
}
